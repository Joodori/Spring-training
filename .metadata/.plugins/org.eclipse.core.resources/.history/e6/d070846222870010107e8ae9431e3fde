	class Check {
		String text;

		public static boolean checkText(String text) {
			int sum = 0;
			if (text.length() % 2 == 0) {

				for (int i = 0; i < text.length(); i++) {
					if (text.charAt(i) == text.charAt(text.length() - (i + 1))) {

					} else {
						sum += 1;
					}
				}
				if (sum > 0 ) {
					System.out.println("앞뒤가 다르대요");
				} else {
					System.out.println("앞뒤가 같아요");
				}

				return false;
			} else {
				for (int i = 0; i < text.length(); i++) {
					if (text.charAt(i) == text.charAt(text.length()- (i+1) )) {
						
					} else {
						sum += 1;
					}
				}
				if (sum > 0 ) {
					System.out.println("앞뒤가 다르대요");
				} else {
					System.out.println("앞뒤가 같아요");
				}
				return true;
			}
		}
