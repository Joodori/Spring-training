<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper-emp">
	<select id="getEmpById" resultType="myspring.Emp">
		select last_name lastName
		, first_name firstName
		, employee_id id
		from employees
		where employee_id =
		#{id}
	</select>

<!-- select <테이블의 컬럼> <VO객체의 변수이름을 알리아스로 설정> -->
	<select id="getEmpListByDeptNo" parameterType="int" resultType="myspring.Emp">
		select last_name lastName
		, first_name firstName
		, employee_id id
		, salary salary
		from employees
		where department_id =
		#{deptId}
	</select>

	<select id="getEmpByJobId" parameterType="String" resultType="myspring.Emp">
		select last_name lastName
		, first_name firstName
		, employee_id id
		, job_id jobId
		, salary salary
		from employees
		where job_id =
		#{jobId}
	</select>

	<!-- 1번 쿼리문 : firstName으로 직원찾기 -->
	<select id="findEmpByFirstName" parameterType="String" resultType="myspring.Emp">
		select first_name firstName
		, last_name lastName
		, email email
		, hire_date hireDate
		, salary salary
		from employees
		where first_name =
		#{firstName}
	</select>
	
	<!-- 2번 쿼리문 : 입사년도로 직원찾기 -->
	<select id="findEmpByYear" parameterType="Integer" resultType="myspring.Emp">
		select last_name lastName
		, first_name firstName
		, employee_id empId
		, salary salary
		from employees
		where year(hire_date) =
		#{hireDate}
	</select>
	
	<!-- 3번 쿼리문 : 부서번호로 직원찾기 -->
	<select id="findEmpByDeptId" parameterType="Integer" resultType="myspring.Emp">
		select last_name lastName
		, first_name firstName
		, employee_id empId
		, department_id deptId
		from employees
		where department_id = 
		#{deptId}
	</select>
	
	<!-- 4번 쿼리문 : 도시이름으로 직원찾기 -->
	<select id="findEmpByCityName" parameterType="String" resultType="myspring.Emp">
		select employee_id empId
		, department_id deptId
		, first_name firstName
		, last_name lastName
		, department_id deptId
		from employees 
		where department_id in 
		(select department_id 
		from departments 
		where location_id = 
		(select location_id 
		from locations 
		where city = #{city}))
	</select>
	
	<select id="getEmpByFirstNLastName" parameterType="String" resultType="myspring.Emp">
		select last_name
		, first_name
		, employee_id
		, salary
		from employees
		where concat(first_name, last_name) = #{fullName}
	
	</select>
</mapper>