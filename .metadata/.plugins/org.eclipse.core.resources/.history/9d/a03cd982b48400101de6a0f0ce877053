/*입력한 배열의 합을 구하는 프로그램을 작성하시오.
 - 입력 : 4 9 3 50 => 문자열로 입력됨
 - 출력 : 64
 
 */

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class test1 {

	private static final Object[] List = null;

	public static void main(String[] args) {
		
		// while문을 돌리기위해 일단 a라는 변수에 참을 받아놓음
		boolean a = true;
		
		// 전체 합을 구하기 위해 담아놓을 변수를 만들어놈
		int sum = 0;
		
		
		// 입력을 받아야하기 때문에 Scanner라는 클래스를 가져와서 scan이라는 변수명으로 생성함
		Scanner scan = new Scanner(System.in);
		
		// 여기부터 while문 들어가기전에 0누르면 종료된다고 알림
		// while이 참 이기 때문에 쭉 받다가 만약에 입력값(numStr이 0과 같으면 종료)
		System.out.println("입력하는 숫자들의 합을 구해봐요 ( 0을 누르면 종료됩니다 !)");
		while(a) {
			String numStr = scan.next();
			int num = Integer.parseInt(numStr);
			sum += num;

			System.out.println("지금까지의 합은 : " + sum);
			
			if (numStr.equals("0")) {
				System.out.println("합은 ! : " + sum);
				break;
			}
		}
		
		
	}

}
